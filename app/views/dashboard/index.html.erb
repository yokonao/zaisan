<div class="space-y-8" data-controller="account-dialog">
  <!-- Total Assets Card -->
  <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-2xl p-8 text-white">
    <h1 class="text-3xl font-bold mb-2">総資産額</h1>
    <div class="text-5xl font-bold mt-4">
      ¥<%= number_with_delimiter(@total_amount) %>
    </div>
  </div>

  <!-- Accounts Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @accounts.each do |account| %>
      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-lg font-bold text-gray-800">
              <%= account.name || "名称未設定" %>
            </h3>
            <span class="inline-block px-3 py-1 text-xs font-medium rounded-full 
              <%= case account.account_type
                  when 'mufg' then 'bg-red-100 text-red-700'
                  when 'rakuten_sec' then 'bg-purple-100 text-purple-700'
                  when 'daiwa_sec' then 'bg-blue-100 text-blue-700'
                  else 'bg-gray-100 text-gray-700'
                  end %>">
              <%= {'mufg' => '三菱UFJ', 'rakuten_sec' => '楽天証券', 'daiwa_sec' => '大和証券', 'other' => 'その他'}[account.account_type] %>
            </span>
          </div>
        </div>
        
        <div class="text-2xl font-bold text-gray-900 mb-4">
          ¥<%= number_with_delimiter(account.latest_amount) %>
        </div>
        
        <% if account.latest_snapshot %>
          <p class="text-sm text-gray-500 mb-4">
            最終更新: <%= account.latest_snapshot.recorded_at.strftime("%Y/%m/%d %H:%M") %>
          </p>
        <% else %>
          <p class="text-sm text-gray-500 mb-4">
            まだ記録がありません
          </p>
        <% end %>
        
        <div class="flex space-x-2">
          <%= link_to "記録", new_account_account_snapshot_path(account), class: "flex-1 text-center bg-green-50 text-green-600 py-2 px-4 rounded-lg hover:bg-green-100 transition" %>
          <button data-action="click->account-dialog#openEdit" data-account-dialog-id-param="<%= account.id %>" data-account-dialog-name-param="<%= account.name %>" data-account-dialog-type-param="<%= account.account_type %>" data-account-dialog-description-param="<%= account.description %>" class="flex-1 text-center bg-blue-50 text-blue-600 py-2 px-4 rounded-lg hover:bg-blue-100 transition">
            編集
          </button>
          <%= button_to "削除", account_path(account), method: :delete, form: { data: { turbo_confirm: "本当に削除しますか？" } }, class: "flex-1 text-center bg-red-50 text-red-600 py-2 px-4 rounded-lg hover:bg-red-100 transition" %>
        </div>
      </div>
    <% end %>
    
    <!-- Add New Account Card -->
    <%= link_to new_account_path, class: "bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-6 flex flex-col items-center justify-center hover:border-indigo-400 hover:bg-indigo-50 transition group" do %>
      <svg class="w-12 h-12 text-gray-400 group-hover:text-indigo-500 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      <span class="mt-2 text-gray-600 group-hover:text-indigo-600 font-medium">新規口座追加</span>
    <% end %>
  </div>

  <!-- Edit Account Dialog -->
  <div data-account-dialog-target="editDialog" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
      <div class="mt-3">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">口座情報を編集</h3>
        <%= form_with url: "#", method: :patch, data: { account_dialog_target: "editForm" }, local: false do |form| %>
          <div class="mb-4">
            <%= form.label :name, "口座名", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, data: { account_dialog_target: "nameInput" }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          
          <div class="mb-4">
            <%= form.label :account_type, "口座種別", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :account_type, 
                options_for_select([
                  ['三菱UFJ', 'mufg'],
                  ['楽天証券', 'rakuten_sec'],
                  ['大和証券', 'daiwa_sec'],
                  ['その他', 'other']
                ]), 
                {},
                { data: { account_dialog_target: "typeInput" }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" } %>
          </div>
          
          <div class="mb-4">
            <%= form.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, data: { account_dialog_target: "descriptionInput" }, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          
          <div class="flex justify-end space-x-2">
            <button type="button" data-action="click->account-dialog#closeEdit" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition">
              キャンセル
            </button>
            <%= form.submit "更新", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
